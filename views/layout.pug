mixin item(name, url)
  li
    - let isActive = name === title ? 'font-bold' : '';
    a.block.w-full.py-4.text-white(
      class=`${isActive} hover:bg-slate-600 hover:text-white active:bg-slate-500`,
      href=url
    )= name

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title!= title
    link(rel='preconnect', href='https://rsms.me/')
    link(rel='stylesheet', href='https://rsms.me/inter/inter.css')
    link(rel='stylesheet', href='/styles/style.css')

  body
    nav.bg-slate-700
      ul.list-none.text-center
        +item('Categories', '/categories')
        +item('Subcategories', '/subcategories')
        +item('Products', '/products')

    block content
